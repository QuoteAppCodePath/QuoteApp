<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the solid color behind the rounded corners; adjust as needed. -->
    <solid android:color="#0A0F32"/>

    <!-- This is the corner radius for all corners; adjust as needed. -->
    <corners android:radius="16dp"/>

    <!-- Optional: If you want to add a border to the drawable. -->
    <stroke
        android:width="1dp"
        android:color="#FF000000"/>

    <!-- Optional: If you want to add a padding within the drawable. -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>

    <!-- Optional: If you want to add a shadow, you might need to use elevation on the View. -->
</shape>
